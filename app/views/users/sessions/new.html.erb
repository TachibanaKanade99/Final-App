<!doctype html>
<html lang="en">
<head></head>
<body>

<nav class="navbar navbar-expand-lg fixed-top navbar-dark ft-navbar">
	<div class="col-xs-1 col-md-2 p-0 text-center">
		<a class="navbar-brand ft-name font-weight-bold" href="#">Fotobook</a>
	</div>

	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>

	<div class="collapse navbar-collapse" id="navbarSupportedContent">
		<div class="col-md-5 mr-auto px-0">
			<div class="input-group input-group-sm py-1">
				<input class="form-control" type="search" role="search" placeholder="Search Photo / Album" aria-label="Search">
			</div>
		</div>

<!--		<div class="col-xs-6 col-md-2 text-center">-->
<!--			<a class="navbar-brand font-weight-bold ft-login" href="#">Login</a>-->
<!--		</div>-->

		<div class="col-xs-6 col-md-2 text-center">
			<%= link_to("Signup", new_registration_path(resource_name), class: "navbar-brand font-weight-bold ft-login") %>
		</div>

	</div>
</nav>

<div class="container-fluid text-center font-weight-bolder pt-5 mt-5 ft-center-text">
	Fotobook Login
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-6 col-md-4 col-md-offset-4 m-auto ">
			<div class="fa-border mt-3 text-center">
				<a href="https:www.google.com" target="_blank">
					<img class="mr-3" src="https://img.icons8.com/color/62/000000/google-logo.png"/>
				</a>

				<a href="#">
					<img class="mr-3" src="https://img.icons8.com/fluent/70/000000/facebook-new.png"/>
				</a>

				<a href="#">
					<img class="" src="https://img.icons8.com/color/70/000000/twitter-circled.png"/>
				</a>

			</div>
			<div class="account-wall">
				<img class="profile-img mt-4" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">

				<%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, :html => {:class => "form-signin"}) do |u| %>
					<%= render "users/shared/error_messages", resource: resource %>

					<%= u.email_field :email, autofocus: true, autocomplete: "email", value: "", placeholder: "Email", class: "form-control"%>

					<br>
					<%= u.password_field :password, autocomplete: "current-password", value: "", placeholder: "Password", class: "form-control"%>

					<br>
					<% if devise_mapping.rememberable? %>
						<%= u.check_box :remember_me, class: "form-check-input ml-2", type: "checkbox"%>
						<%= u.label :remember_me, class: "form-check-label ml-4"%>
					<% end %>

					<div class="text-center">
						<%= u.submit "Login", class: "mt-2 btn text-light login-btn" %>
					</div>
				<% end %>

				<%#= render "users/shared/links" %>
				<%= link_to("Forgot password?", new_password_path(resource_name), class: "text-center new-account mb-1")%>
			</div>
			<%= link_to("Create an account", new_registration_path(resource_name), class: "text-center new-account")%>
		</div>
	</div>
</div>

</body>
</html>
