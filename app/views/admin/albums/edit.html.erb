<!doctype html>
<html lang="en">
<head></head>
<body data-spy="scroll" data-target="#toc" class="ft-mainpage">

<nav class="navbar navbar-expand-lg fixed-top navbar-dark ft-navbar">
	<div class="col-xs-1 col-md-1 offset-md-1 text-center">
		<a class="navbar-brand ft-name font-weight-bold" href="#">Fotobook</a>
	</div>

	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>

	<div class="collapse navbar-collapse" id="navbarSupportedContent">
		<div class="col-md-5 mr-auto px-0">
			<div class="input-group input-group-sm">
				<input class="form-control" type="search" role="search" placeholder="Search Photo / Album" aria-label="Search">
			</div>
		</div>

		<div class="col-xs-6 col-md-1 text-center">
			<%= link_to(user_path(id: current_user), class: "navbar-brand") do  %>
				<%= image_tag(current_user.avatar.url, class: "img-fluid rounded-circle ft-avatar") %>
				<span class="font-weight-bold ft-login" href="#"> <%= current_user.first_name %> <%=current_user.last_name %> </span>
			<% end %>
		</div>

		<div class="col-xs-6 col-md-2 text-center">
			<%= link_to("Logout", destroy_user_session_path, method: "delete", class: "navbar-brand font-weight-bold ft-login") %>
		</div>
	</div>
</nav>

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-1 col-md-2 mt-5">
			<nav class="sticky-top text-center" id="toc" data-toggle="toc">
				<ul class="nav navbar-nav">
					<%= link_to("Feeds", user_feeds_path(user_id: current_user, status: 'photo'), method: "get", class: "btn shadow-none p-0 content-text", type: "button") %>
				</ul>
				<ul class="nav navbar-nav">
					<button type="button" class="btn p-0 shadow-none content-text">My Photos</button>
				</ul>
				<ul class="nav navbar-nav">
					<button type="button" class="btn p-0 shadow-none content-text">My Albums</button>
				</ul>
			</nav>
		</div>

		<div class="col-xs-6 col-md-8 bg-white mt-3 hmm">
            <div class="float-md-right">
                <%= link_to('Back', admin_manage_albums_path(id: current_user), class: "btn btn-sm m-3 px-3 ft-back-btn") %>
            </div>

			<div class="m-3 font-weight-bolder h5">
				Edit Album
			</div>
			<hr>

			<%= render 'form', user: User.find(params[:user_id].to_i), album: Album.find(params[:id].to_i), type: 'edit_album' %>

			<footer>
				<nav aria-label="Page navigation example">
					<ul class="pagination m-3 justify-content-center">
						<li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
						<li class="page-item active"><a class="page-link" href="#">1</a></li>
						<li class="page-item"><a class="page-link" href="#">2</a></li>
						<li class="page-item"><a class="page-link" href="#">3</a></li>
						<li class="page-item"><a class="page-link" href="#">Next</a></li>
					</ul>
				</nav>
			</footer>
		</div>

		<div class="col-xs-1 col-md-2">

		</div>
	</div>

</div>

</body>
</html>