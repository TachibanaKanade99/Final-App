<!doctype html>
<html lang="en">
	<body data-spy="scroll" data-target="#toc" class="ft-mainpage">

		<nav class="navbar navbar-expand-lg fixed-top navbar-dark ft-navbar">
			<div class="col-xs-1 col-md-2 p-0 text-center">
				<a class="navbar-brand ft-name font-weight-bold" href="#">Fotobook Admin</a>
			</div>

			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<div class="col-md-5 mr-auto px-0">
					<div class="input-group input-group-sm">
						<input class="form-control" type="search" role="search" placeholder="Search Photo / Album" aria-label="Search">
					</div>
				</div>
				
				<div class="col-xs-6 col-md-1 text-center">
					<%= link_to(user_path(id: current_user), class: "navbar-brand") do  %>
                        <%= image_tag(current_user.avatar.url, class: "img-fluid rounded-circle ft-avatar") %>
                        <span class="font-weight-bold ft-login" href="#"> <%= current_user.first_name %> <%=current_user.last_name %> </span>
                    <% end %>
				</div>
	
				<div class="col-xs-6 col-md-2 text-center">
					<%= link_to("Logout", destroy_user_session_path, method: "delete", class: "navbar-brand font-weight-bold ft-login") %>
				</div>
			</div>	
		</nav>

		<div class="container-fluid">
			<div class="row">
				<div class="col-xs-1 col-md-2 mt-5 text-center">
					<nav class="sticky-top" id="toc" data-toggle="toc">
						<ul class="nav navbar-nav">
							<%= link_to("Manage Photos", admin_manage_photos_path, class: "btn shadow-none p-0 content-text") %>
						</ul>
	
						<ul class="nav navbar-nav">
							<%= link_to("Manage Albums", admin_manage_albums_path, class: "btn shadow-none p-0 content-text content-text-active") %>
						</ul>
	
						<ul class="nav navbar-nav">
							<%= link_to("Manage Users", admin_manage_users_path, class: "btn shadow-none p-0 content-text") %>
						</ul>
					</nav>
				</div>
				
				<div class="col-xs-6 col-md-8 bg-white mt-3 py-5 hmm">
                    <div class="row">
                        <div class="col-2 col-md-1 p-0"></div>
                        <div class="col-8 col-md-11 p-0"> 
                            <div class="row">
                                <% if @albums.size != 0 %>
                                    <% @albums.each do |album| %>
                                        <div class="col-10 col-md-2 m-4 p-3 bg-light text-center border">
                                            
                                            <div class="col-12 col-md-12  p-0">       
                                                <%= image_tag(album.photos.first.image.url, class: "position-absolute img-fluid img-thumbnail ft-imgs", alt: "photo") %>
                                                <%= image_tag(album.photos.first.image.url, class: "position-absolute rotate6 img-fluid img-thumbnail ft-imgs", alt: "photo") %>
                                                <%= image_tag(album.photos.first.image.url, class: "rotate11 img-fluid img-thumbnail ft-imgs", alt: "photo") %>

                                            </div>

                                            <%= link_to(edit_admin_user_album_path(user_id: album.user.id, id: album.id), class: "album-top-content text-center") do %>
                                                <%= album.title %>
                                                <i class="fas fa-edit"></i>
                                            <% end %>

                                        </div>
                                    <% end %>
                                <% else %>
                                    <div class="row mt-3 text-blue">
                                        No Album!
                                    </div>
                                <% end %>	
                            </div>
                        </div>
                    </div>
					
					<footer>
						<div class="d-flex justify-content-center">
                            <div class="spinner-border" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                        </div>
                        <%= paginate @albums %>
					</footer>

                    <%# Flash %>
                    <div class="mt-1 mx-2">
                        <% flash.each do |type, msg| %>
                            <div class="alert alert-info">
                                <%= msg %>
                            </div>
                        <% end %>
                    </div>
				</div>				
			</div>
		</div>
	</body>
</html>